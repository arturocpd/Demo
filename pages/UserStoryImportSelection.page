<apex:page standardController="User_Story__c" recordSetVar="records" extensions="UserStoryImportSetController" action="{!initPage}" lightningStylesheets="true">
	<head>
		<c:GAnalytics />
		<apex:stylesheet value="{!URLFOR($Resource.CopadoLightningCSS)}" />
	</head>
	<body>
		<apex:sectionHeader id="sectionHeader" title="{!$Label.COPADO_CHANGE_MANAGEMENT}"
	                        subtitle="{!$Label.USER_STORY_IMPORT_SELECTION}"
	                        description="{!$Label.USER_STORY_IMPORT_DESCRIPTION}"/>
		<apex:pageMessages id="theMessages" />
		
		<apex:form id="theForm" styleClass="copado-lightning-container" html-novalidate="true">
			<apex:pageBlock id="pb" mode="edit">
				<apex:pageBlockButtons id="pbButtons" location="bottom">
					<apex:commandButton id="btnCancel" value="Cancel" action="{!cancel}" />
					<apex:commandButton id="btnAssign" value="Add selections" action="{!assign}" />
				</apex:pageBlockButtons>
				<apex:pageBlockSection id="pbs">
					<apex:inputField value="{!dummy.User_Story__c}" />
				</apex:pageBlockSection>

				<apex:pageBlockSection title="Previously committed metadata selections">
					<apex:outputPanel layout="none" rendered="{!allMetadata.size<1000}">
						<apex:dataList value="{!allMetadata}" var="m">
						   <apex:outputText value="{!m.t}.{!m.n}"/>
					    </apex:dataList>
					</apex:outputPanel>
					<apex:outputPanel layout="none" rendered="{!allMetadata.size>=1000}">
						{!$Label.Collection_Size_Exceeded}
					</apex:outputPanel>
				</apex:pageBlockSection>
	            
	        </apex:pageBlock>
		</apex:form>
	    <script>
	        ga('send', 'pageview', {
	          'page': '/UserStoryImportSelection',
	          'title': 'User Story Import Selection'
	        });
	    </script>
	</body>
</apex:page>